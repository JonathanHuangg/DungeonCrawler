<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/gameLayOut"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".viewmodels.GameActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/dungenintro" />

    <Button
        android:id="@+id/goToEndScreenButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:rotationX="0"
        android:text="Start Game" />

    <TextView
        android:id="@+id/textView_playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="150dp"
        android:text="@string/temp_name"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView_ChosenDifficulty"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView_startingHealth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="150dp"
        android:text="@string/temp_name"
        android:textColor="#FFFFFF"
        android:layout_above="@+id/textView_ChosenDifficulty"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView_ChosenDifficulty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/temp_name"
        android:textColor="#FFFFFF"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="200dp" />
</RelativeLayout>
